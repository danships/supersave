{
  "name": "supersave",
  "version": "0.20.0",
  "description": "A package to create a simple datastore with a generic API for side projects.",
  "main": "build/index.js",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "lint": "concurrently --kill-others-on-fail \"npm:lint:*\"",
    "lint:tsc": "tsc --noEmit",
    "lint:biome": "biome ci",
    "format": "biome check --write",
    "test": "vitest run",
    "test:all": "pnpm test && pnpm test:mysql && pnpm test:mariadb",
    "test:mysql": "cross-env CONN=mysql://supersave:savesuper@127.0.0.1:3306/supersave vitest run --poolOptions.forks.singleFork",
    "test:mariadb": "cross-env CONN=mysql://supersave:savesuper@127.0.0.1:3307/supersave vitest run --poolOptions.forks.singleFork",
    "test:watch": "cross-env DEBUG=supersave:* vitest",
    "test:watch:mysql": "cross-env DEBUG=supersave:* CONN=mysql://supersave:savesuper@127.0.0.1:3306/supersave vitest run --poolOptions.forks.singleFork",
    "test:ui": "vitest --ui",
    "clean": "rimraf build",
    "start": "nodemon tests/run.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supersavehq/supersave.git"
  },
  "types": "./build/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "sqlite",
    "database",
    "store",
    "api",
    "headless",
    "mysql",
    "supersave",
    "super"
  ],
  "author": "debuggingdan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/supersavehq/supersave/issues"
  },
  "homepage": "https://github.com/supersavehq/supersave#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@tsconfig/node14": "^14.1.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.7",
    "@types/pluralize": "0.0.33",
    "@types/slug": "^5.0.9",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^12.6.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "mysql2": "^3.16.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "superagent": "^10.3.0",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "better-sqlite3": "^11.1.2",
    "mysql2": "^3.11.0"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    }
  },
  "dependencies": {
    "better-call": "^1.1.8",
    "debug": "^4.4.3",
    "pluralize": "^8.0.0",
    "short-uuid": "^6.0.3",
    "slug": "^11.0.1",
    "zod": "^4.3.5"
  }
}
